<h2>Dashboard</h2>
<p>This is the Dashboard</p>

<p data-user="{{user.id}}" id="user-name">{{user.userName}}</p>

<h2>Create a New Post</h2>
<form id = "new-post-form">
  <input type="text" id="post-title">
  <textarea name="new-post" id="new-post" cols="30" rows="10"></textarea>
  <button type="submit" id= "post-submit">Submit New Post</button>
</form>

{{#each user.comments as |comment|}}
<a href="/api/posts/{{comment.post_id}}">
<h2>{{comment.contents}}</h2>
</a>
{{/each}}

{{#each user.posts as |post|}}
<a href="/api/posts/{{post.id}}">
<h2>{{post.title}}</h2>
<p>{{post.contents}}</p>
</a>
{{/each}}